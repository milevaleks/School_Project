@model IEnumerable<ProjectViewModel>

@foreach (var project in Model)
{
    <table class="task-entry">
        <tbody>
            <tr class="title">
                <th>Title</th>
                <td>@project.Title</td>
            </tr>
            <tr class="description">
                <th>Description</th>
                <td>
                    <div class="description">@project.Description</div>
                </td>
            </tr>
            <tr class="actions">
                <th>Actions</th>
                <td>
                    <a asp-controller="Projects" asp-action="Details" asp-route-id="@project.Id" class="btn btn-secondary mb-2">View</a>
                    <span></span>
                    <a asp-controller="Projects" asp-action="Delete" asp-route-id="@project.Id" class="btn btn-secondary mb-2">Delete</a>
                    <span></span>
                    <a asp-controller="Projects" asp-action="CreateProjectTask" asp-route-id="@project.Id" class="btn btn-secondary mb-2">Add Task</a>
                </td>
            </tr>
        </tbody>
    </table>
}
